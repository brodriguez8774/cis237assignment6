@model IEnumerable<cis237Assignment6.Models.Beverage>

@{
    ViewBag.Title = "Beverage List";
}

<h2>Beverage List</h2>


@*Section for user filter form.*@

<div class="form-group">
    <fieldset>
        <legend>Search Filter</legend>
        @*Section for C# code to make form.*@
        @{
            using (Html.BeginForm("Filter", "Beverage", FormMethod.Post, new { @class = "form-inline" }))
            {
                // Low level security. Some security is always better than none.
                @Html.AntiForgeryToken()
            
                <label for="id">Name</label>
                @Html.TextBox("name", (string)ViewBag.filterName);
                <label for="name">Pack</label>
                @Html.TextBox("pack", (string)ViewBag.filterPack);
                <label for="pack">Min Price</label>
                @Html.TextBox("price", (string)ViewBag.filterPrice);
                <label for="id">Active</label>
                @Html.TextBox("active", (string)ViewBag.filterActive);
            
                <input type="submit" value="Filter" class="btn btn-info pull-right" />
            }
        }


    </fieldset>

</div>





@*Premade section to create tables out of database.*@
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @*
            @Html.DisplayNameFor(model => model.name)
            *@
            Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.pack)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.active)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.pack)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.active)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
